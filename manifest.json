{
	"manifest_version": 2,
	"name": "copycat",
	"version": "1.0.0.0",
	"author": "gellel",
	"homepage_url": "https://github.com/gellel/copycat",

	"default_locale": "en",
	"description": "Copycat stores your copies! Meow!",

	"background": {
		"scripts": ["js/lib/prototypes.js", "js/copycat/copycat.js", "js/event/event.js"],
		"persistent": false
	},

	"browser_action": {
		"default_icon": "img/png/icon/256/256.png",
		"default_popup": "index.html"
	},

	"browser_action": {
		"default_icon": {               
			"16": "img/png/icon/256/256.png",      
			"24": "img/png/icon/256/256.png",      
			"32": "img/png/icon/256/256.png"       
		},
		"default_title": "copycat",
		"default_popup": "index.html"   
	},

	"content_scripts": [
		{
			"js": [
				"js/copycat/copycat.js", "js/content/content.js"
			],
			"matches": [
				"http://*/*", 
				"https://*/*"
			],
			"run_at" : "document_start"
		}
	],

	"commands": {
		"copycat": {
			"suggested_key": {
				"default": "Ctrl+Shift+E",
				"mac": "Command+Shift+E"
			},
			"description": "Copycat collection hotkey."
		}
	},

	"icons": { 
		"16": "img/png/icon/256/256.png",
		"48": "img/png/icon/256/256.png",
		"128": "img/png/icon/256/256.png" 
	},

	"permissions": [
		"activeTab",
		"tabs", 
		"http://*/*", 
		"https://*/*",
		"storage"
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}