{
  "manifest_version": 2,

  "name": "copycat",
  "description": "Copy Cat copies your copies!",
  "version": "1.0",

  "icons": {
	 "16": "img/png/icon/16/16.png",
   "128": "img/png/icon/128/128.png"
  },

  "browser_action": {
    "default_icon": "img/png/icon/256/256.png",
    "default_popup": "index.html"
  },

  "background": {
      "scripts": [
          "js/background/background.js"
      ]
  },

  "content_scripts": [
    {
      "js": ["js/lib/prototypes.js", "js/content/content.js"],
      "all_frames": true,
      "run_at" : "document_start", /** document_idle **/
      "matches": ["http://*/*", "https://*/*"]
    }
  ],

  "permissions": [
    "activeTab",
    "tabs", 
    "http://*/*", 
    "https://*/*"
  ]

  /*"web_accessible_resources": ["prototypes.js", "database.js", "content_main.js"]*/
}