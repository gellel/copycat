{
	"manifest_version": 2,
	"name": "copycat",
	"version": "1.0.0.0",
	"author": "gellel",
	"homepage_url": "https://github.com/gellel/copycat",

	"default_locale": "en",
	"description": "copycat stores your copies!",

	"background": {
		"scripts": [
			"js/background/background.js"
		]
	},

	"browser_action": {
		"default_icon": "img/png/icon/256/256.png",
		"default_popup": "index.html"
	},

	"browser_action": {
		"default_icon": {               
			"16": "img/png/icon/256/256.png",      
			"24": "img/png/icon/256/256.png",      
			"32": "img/png/icon/256/256.png"       
		},
		"default_title": "copycat",
		"default_popup": "index.html"   
	},

	"content_scripts": [
		{
			"js": [
				"js/lib/prototypes.js", 
				"js/content/content.js"
			],
			"matches": [
				"http://*/*", 
				"https://*/*"
			],
			"run_at" : "document_start",
			"all_frames": false
		}
	],

	"commands": {
		"copycat": {
			"suggested_key": {
				"default": "Ctrl+Shift+C",
				"mac": "Command+Shift+C"
			},
			"description": "Copies selected string to copycat database."
		}
	},

	"icons": { 
		"16": "img/png/icon/256/256.png",
		"48": "img/png/icon/256/256.png",
		"128": "img/png/icon/256/256.png" 
	},

	"permissions": [
		"activeTab",
		"tabs", 
		"http://*/*", 
		"https://*/*"
	],

	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}